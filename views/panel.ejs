<!DOCTYPE html>
<html lang="en">

<%- include('partials/head.ejs', {pageTitle: 'Panel' }); %>

    <body>
        <%- include('partials/header.ejs') %>

            <main class="mainPanel">
                <form action="products/edit/:id/?_method=PUT" method="POST" class="formPanel">
                    <p>
                        <label>Buscar producto</label>
                        <input type="text" name="producto">
                    </p>
                    <article class="card">
                        <img src="../images/Caesar.jpeg" alt="Ensalada Caesar">
                        <div class="description">
                            <h2>Ensalada Caesar</h2>
                            <p class="price">Precio $ 750.00</p>
                            <p>Ingredientes: Pollo, queso, tomates cherry, mix de verdes, croutons y aderezo caesar</p>
                            <div class="botones">
                                <a href="#">Modificar</a>
                                <a href="#">Eliminar</a>
                            </div>
                        </div>
                    </article>
                </form>
                <form action="/products" method="POST" class="formPanel">

                    <section class="newProduct">
                        <h2>AGREGAR PRODUCTO</h2>
                        <p>
                            <label>Nombre:</label>
                            <input type="text" name="name" required>
                        </p>
                        <p>
                            <label>Base:</label>
                            <input type="text" name="base" required>
                        </p>
                        <p>
                            <label>Aderezo:</label>
                            <input type="text" name="aderezo" required>
                        </p>
                        <p>
                            <label>Ingredientes:</label>
                            <input type="text" name="ingredientes" required>
                        </p>
                        <p>
                            <label>Imagen:</label>
                            <input type="file" accept=".jpg, .png, .jpeg" name="image">
                        </p>
                        <p>
                            <label>Precio:</label>
                            <input type="text" name="price" required>
                        </p>
                        </div>
                        <p class="botonesPanel">
                            <button type="reset" class="botonPanel">Borrar</button>
                            <button type="submit" class="botonPanel">Enviar</button>
                        </p>

                </form>
            </main>
            <%- include('partials/footer.ejs') %>


                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" 
                integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"  crossorigin="anonymous"></script>
    </body>

</html>