<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs', {pageTitle: 'Panel' }); %>

    <body>

        <%- include('./partials/header.ejs') %>

            <main class="mainPanel">

                <form action="/products" method="POST" class="formPanel" enctype="multipart/form-data">
                    <section class="newProduct">
                        <h2>AGREGAR PRODUCTO</h2>
                        <p>
                            <label>Nombre:</label>
                            <input type="text" name="nombre" required>
                        </p>
                        <p>
                            <label>Base:</label>
                            <input type="text" name="base" required>
                        </p>
                        <p>
                            <label>Aderezo:</label>
                            <input type="text" name="aderezo" required>
                        </p>
                        <p>
                            <label>Ingredientes:</label>
                            <input type="text" name="ingredientes" required>
                        </p>
                        <p>
                            <label for="product-images">Imagen:</label>
                            <input type="file" accept=".jpg, .png, .jpeg" name="product-images" id="product-images">
                        </p>
                        <p>
                            <label>Precio:</label>
                            <input type="text" name="precio" required>
                        </p>
                        </div>
                        <p class="botonesPanel">
                            <button type="reset" class="botonPanel">Borrar</button>
                            <button type="submit" class="botonPanel">Crear</button>
                        </p>
                    </section>
                </form>

                <form action="/products/update?_method=PUT" method="POST" class="formPanel">
                    <section class="newProduct">
                        <h2>MODIFICAR PRODUCTO</h2>
                        <p>
                            <label>Nombre:</label>
                            <input type="text" name="nombre">
                        </p>
                        <p>
                            <label>Base:</label>
                            <input type="text" name="base">
                        </p>
                        <p>
                            <label>Aderezo:</label>
                            <input type="text" name="aderezo">
                        </p>
                        <p>
                            <label>Ingredientes:</label>
                            <input type="text" name="ingredientes">
                        </p>
                        <p>
                            <label for="product-images">Imagen:</label>
                            <input type="file" accept=".jpg, .png, .jpeg" name="imagen">
                        </p>
                        <p>
                            <label>Precio:</label>
                            <input type="text" name="precio">
                        </p>
                        <p>
                            <label>ID:</label>
                            <input type="text" name="id" required>
                        </p>
                        </div>
                        <p class="botonesPanel">
                            <button type="reset" class="botonPanel">Borrar</button>
                            <button type="submit" class="botonPanel">Modificar</button>
                        </p>
                    </section>
                </form>

                <form action="/products/delete?_method=DELETE" method="POST" class="formPanel">
                    <section class="newProduct">
                        <h2>ELIMINAR PRODUCTO</h2>
                        <p>
                            <label>ID:</label>
                            <input type="text" name="id" required>
                        </p>
                        </div>
                        <p class="botonesPanel">
                            <button type="reset" class="botonPanel">Borrar</button>
                            <button type="submit" class="botonPanel">Eliminar</button>
                        </p>
                    </section>
                </form>

            </main>

            <%- include('./partials/footer.ejs') %>


                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                    crossorigin="anonymous"></script>
    </body>

</html>