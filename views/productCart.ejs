<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Mi carrito' }); %>

    <body>
        <%- include('./partials/header') %>

            <main class="mainCart">
                
                <div class="singleItem">
                    <div class="left-set">
                       <img id='imageDetail' src="/images/products/<%=product.image%> " alt="...">
                    </div>
                    <div class="right-set">
                      <div class="name"><h2><%=product.name%></h2></div>
                      <div class="price"><h1><%=product.price%>$</h1></div>
                      <div class="descriptionCart"><p><%=product.description%></p></div>
                      <label class="pure-material-textfield-outlined">
                        <input type="text" name="text" placeholder=" ">
                        <span>Observaci√≥n</span>
                      </label>
                    </div>
                </div>
                
                 <div class="pago">
                        <form>
                            <h2>Pagar</h2>
                            <i class="fa-solid fa-cart-shopping"></i>
                            <p>Elija medio de pago</p>
                            <div class="formulariopago">
                                <label><i class="fa-regular fa-dollar-sign"></i> Efectivo<input type="radio" name=""
                                        id="Cash" value="Cash"></label>
                                <label><i class="fa-brands fa-cc-mastercard"></i> Mastercard<input type="radio"
                                        name="Mastercard" id="Mastercard" value="Mastercard"></label>
                                <label><i class="fa-brands fa-cc-visa"></i> Visa<input type="radio" name="Visa"
                                        id="Visa" value="Visa"></label>
                                <label><i class="fa-brands fa-cc-paypal"></i> PayPal<input type="radio" name="PayPal"
                                        id="PayPal" value="PayPal"></label>
                                <label><i class="fa-brands fa-cc-apple-pay"></i> Apple Pay<input type="radio"
                                        name="ApplePay" id="ApplePay" value="ApplePay"></label>
                            </div>

                            <div class="formulariopago2">
                                <div><button type="submit"> Enviar </button></div>
                                <div><button type="reset"> Limpiar pedido </button></div>
                            </div>
                        </form>
                    </div>
                </section>
            </main>
            <%- include('./partials/footer') %>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</html>