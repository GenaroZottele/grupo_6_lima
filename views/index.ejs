<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head', {pageTitle: 'LIMA' }); %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="ensaladaDelDia">
                    <h2>Ensalada del día - La Clásica - $850 </h2>
                    <p>Pidiendo tres ensaladas, tenés un 10% de descuento</p>
                    <a href="/products/create" style="margin-left: 15px; ">Create</a>
                </section>
                <section class="cards">
                    <h2> <b> MAS VENDIDAS </h2>
                    </p>
                    <% products.forEach(product=> { %>

                        <article class="card">
                            <img class="card img" src="/images/<%=product.image %> " alt="...">
                            <div class="description">
                                <h2>
                                    <%=product.name %>
                                </h2>
                                <p clas="price">Precio $ <%=product.price %>
                                </p>
                                <p>Ingredientes: <%=product.description %>
                                </p>
                                <div class="botones">
                                    <a href="/productCart">Comprar</a>
                                    <a href="/products/productDetailMain/<%=product.id %> ">Detalles</a>
                                </div>
                            </div>
                        </article>
                        <% }) %>
                </section>
            </main>
            <%- include('partials/footer.ejs') %>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</html>
