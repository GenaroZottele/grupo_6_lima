<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs', {pageTitle: 'Registro' }); %>

  <body>
    <%- include('./partials/header.ejs') %>

      <main class="mainregister">
        <form action="../user/login" method="POST" class="formregister" enctype="multipart/form-data">
          <p>
            <label>Nombre y apellido:</label>
            <input type="text" name="nombre" required>
          </p>
          <p>
            <label>Dirección:</label>
            <input type="text" name="direccion" required>
          </p>
          <p>
            <label>Celular:</label>
            <input type="number" name="celular" required>
          </p>
          <p>
            <label for="user-image">Imagen:</label>
            <input type="file" name="user-image" id="user-image">
          </p>

          <p>
            <label>E-mail:</label>
            <input type="email" name="email" required>
          </p>
          <p>
            <label>Contraseña:</label>
            <input type="password" name="password" required>
          </p>
          <p class="botonesregister">
            <button type="reset" class="botonRegister">Borrar</button>
            <button type="submit" class="botonRegister">Enviar</button>
          </p>
        </form>
      </main>
      <%- include('./partials/footer.ejs') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
          crossorigin="anonymous"></script>
  </body>

</html>