<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs', {pageTitle: 'Registro' }); %>

  <body>

    <%- include('./partials/header.ejs') %>

      <main class="mainregister">

        <div id="errors">

        </div>

        <form id="formularioRegister" action="/users/register" method="POST" class="formregister"
          enctype="multipart/form-data">

          <p>
            <label>Nombre y apellido:</label>
            <input type="text" id="full_name" name="full_name" value="<%= locals.oldData ? oldData.full_name : null %>">
          <div class="errors">
            <% if(locals.errors && errors.full_name) { %>
              <%= errors.full_name.msg %>
                <% } %>
          </div>
          <div id="nameError" class="errors-front">

          </div>
          </p>

          <p>
            <label>E-mail:</label>
            <input type="email" id="email" name="email" value="<%= locals.oldData ? oldData.email : null %>">
          <div class="errors">
            <% if(locals.errors && errors.email) { %>
              <%= errors.email.msg %>
                <% } %>
          </div>
          <div id="emailError" class="errors-front">

          </div>
          </p>
          <p>
            <label>Contrase√±a:</label>
            <input type="password" id="password" name="password"
              value="<%= locals.oldData ? oldData.password : null %>">
          <div class="errors">
            <% if(locals.errors && errors.password) { %>
              <%= errors.password.msg %>
                <% } %>
          </div>
          <div id="passwordError" class="errors-front">

          </div>
          </p>
          <p>
            <label>Celular:</label>
            <input type="number" name="phone" value="<%= locals.oldData ? oldData.phone : null %>">
          <div class="errors">
            <% if(locals.errors && errors.phone) { %>
              <%= errors.phone.msg %>
                <% } %>
          </div>
          </p>

          <p>
            <label>adress_id:</label>
            <select name="adress_id" id="adress_id">
              <option value="1">adressId1</option>
              <option value="2">adressId2</option>
            </select>
            <% if(locals.errors && errors.adress_id) { %>
              <%= errors.adress_id.msg %>
                <% } %>
                  </div>
          </p>

          <p>
            <label>user_type_id:</label>
            <select name="user_type_id" id="user_type_id">
              <option value="1">userTypeRegular</option>
              <option value="2">userTypeSuper</option>
            </select>
          <div class="errors">
            <% if(locals.errors && errors.user_type_id) { %>
              <%= errors.user_type_id.msg %>
                <% } %>
          </div>
          </p>

          <p>
            <label for="user-image">Imagen:</label>
            <input type="file" id="avatar" name="avatar">
          <div class="errors">
            <% if(locals.errors && errors.avatar) { %>
              <%= errors.avatar.msg %>
                <% } %>
          </div>
          </p>

          <p class="botonesregister">
            <button type="reset" class="botonRegister">Borrar</button>
            <button type="submit" class="botonRegister">Enviar</button>
          </p>
        </form>
      </main>

      <%- include('./partials/footer.ejs') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
          crossorigin="anonymous"></script>
        <script src="/js/ValidareRegisterFrontend.js"></script>
  </body>

</html>