<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Detalle de productos' }); %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="detail">
                    <% for (let i=0; i < products.length; i++) { %>
                        <a href="/products/<%=products[i].id%>"></a>
                        <h2>
                            <%=products[i].name %>
                        </h2>
                        <div class="boxDetail">
                            <div class="boxLeft">
                                <img src="/images/products/<%=products[i].image %> ">
                            </div>
                            <div class="boxRight">

                                <p> Descripci√≥n: <%=products[i].description %>
                                </p>
                                <div>
                                    <h3>$<%=products[i].price %>
                                    </h3>
                                </div>
                                <p>
                                    <a href="./productCart" class="agregarCarrito">Agregar al carrito
                                        <i class="fa-solid fa-cart-shopping"></i></a>
                                    <a href="./products/productDetail/<%=products[i].id %> "
                                        class="agregarCarrito">Detalle</a>
                                </p>
                                <p>
                                    <a href="./products/edit/<%=products[i].id %>" class="agregarCarrito">Modificar
                                        producto</a>
                                </p>
                            </div>
                        </div>
                        </div>
                        </div>
                        <% } %>
                </section>
            </main>
            <%- include('./partials/footer') %>
    </body>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</html>