<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'LIMA' }); %>
    <%- include('./partials/header', {pageTitle: 'LIMA' }); %>

        <body>
            <div class="perfil" id="mainPerfil">
                <div class="row">
                        <h4 class="text-right">Perfil</h4>
                    <div class="col-md-3">
                        <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle" width="150px" src="/images/avatars/<%=user.avatar %>">
                            <br>
                            <span class="font-weight-bold">Hola <%= user.full_name %>!</span>
                            <span class="text-black-50"><%= user.email %></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="p-3 py-5">
                            <div class="row mt-3">
                                <h3>Nombre Completo</h3>
                                <label class="col-md-12"><%= user.full_name %></label>
                                <h3>E-mail</h3>
                                <label class="col-md-12"><%= user.email %></label>
                                <h3>Teléfono Celular</h3>
                                <label class="col-md-12"><%= user.phone %></label>
                                <h3>Dirección de Entrega</h3>
                                <label class="col-md-12"><%= user.adress.street %></label>
                            </div>
                        </div>
                    </div>
                </div>
                <a id="botonPerfil" class="pure-material-button-contained" type="button" href='/users/edit'>Editar perfil</a>
                <form action="/users/delete?_method=DELETE" id="Eliminar" method="POST">
                    <button type='submit' class="pure-material-button-contained" id="Eliminar">DESUSCRIBIRME</button>
                </form>  
            </div>        
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
            <script src="/js/carro.js"></script>
        </body>
        <%- include('partials/footer') %>

</html>