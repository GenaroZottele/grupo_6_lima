<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Login' }); %>

  <body>
    <%- include('./partials/header') %>

      <!-- Cambiar las <p> por <div> para mejor formateo y corregirlo en CSS    --------------------------------------------------------------------->

      <main class="mainlogin">

        <div id="errors">

        </div>

        <form id="formularioLogin" action='/users/login' method="POST" class="formLogin">

          <div class="login">
            <p>
              <label>Correo electrónico:</label>
              <input type="text" id="email" name="email">
            <div class="errors">
              <% if(locals.errors && errors.email) { %>
                <%= errors.email.msg %>
                  <% } %>
            </div>
            <div id="emailError" class="errors-front">

            </div>
            </p>
            <p>
              <label class="loginLabel">Contraseña:</label>
              <input class="loginInput" type="password" id="password" name="password">
            <div class="errors">
              <% if(locals.errors && errors.password) { %>
                <%= errors.password.msg %>
                  <% } %>
            </div>
            <div id="passwordError" class="errors-front">

            </div>
            </p>
            <p>
              <label">
                <input type="checkbox" name="recordar" value="recordar">Recordarme
                </label>
            </p>
            <p class="botoneslogin">
              <button type="submit" class="botonLogin">Iniciar sesión</button>
              <button type="reset" class="botonLogin"> Cancelar</button>
            </p>
          </div>
        </form>
      </main>
      <%- include('./partials/footer') %>
  </body>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
  <script src="/js/ValidateLoginFrontend.js"></script>

</html>