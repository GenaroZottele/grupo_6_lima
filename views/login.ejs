<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Login' }); %>

  <body>
    <%- include('./partials/header') %>

      <main class="mainlogin">

        <div id="errors">
        </div>

        <form id="formularioLogin" action='/users/login' method="POST" class="formLogin">

          <div class="login">
            
            <div class="containerLogin">
              <label class="pure-material-textfield-outlined">
                <input type="email" id="email" name="email" placeholder=" "
                  value="<%= locals.oldDate ? oldData.email : null %>">
                <span>Correo electrónico</span>
              </label>
              <div class="errorsLogin">
                <% if(locals.errors && errors.email) { %>
                  <%= errors.email.msg %>
                    <% } %>
              </div>
              <div id="emailError" class="errors-front">
              </div>
            </div>

            <div class="containerLogin">
              <label class="pure-material-textfield-outlined">
                <input type='password' id="password" name="password" placeholder=" "
                  value="<%= locals.oldDate ? oldData.password : null %>">
                <span>Contraseña</span>
              </label>
              <div class="errorsLogin">
                <% if(locals.errors && errors.password) { %>
                  <%= errors.password.msg %>
                    <% } %>
              </div>
              <div id="passwordError" class="errors-front-login">
              </div>
            </div>
            
            <div>
              <label class="pure-material-checkbox">
                <input type="checkbox">
                <span>Recordarme</span>
              </label>
            </div>

            <div class="loginButton">
              <button type='submit' class="pure-material-button-contained">Iniciar Sesión</button>
              <button type='reset' class="pure-material-button-contained">Cancelar</button>
            </div>

          </div>

        </form>

      </main>
      <%- include('./partials/footer') %>
      <script src="/js/carro.js"></script>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
  <script src="/js/ValidateLoginFrontend.js"></script>

</html>