<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs', {pageTitle: 'Login' }); %>

  <body>

    <%- include('./partials/header.ejs') %>

      <main class="mainlogin">
        <form action="login.html" method="POST" class="formLogin" enctype="multipart/form-data">
          <div class="login">
            <p>
              <label>Correo electrónico:</label>
              <input type="text" name="email" required>
              <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                  <%= errors.email.msg %>
                </div>
              <% } %>
            </p>
            <p>
              <label class="loginLabel">Contraseña:</label>
              <input class="loginInput" type="password" name="password" required>
            </p>
            <p>
              <label">
                <input type="checkbox" name="recordar" value="recordar">Recordarme
              </label>
            </p>

            <p class="botoneslogin">
              <button type="submit" class="botonLogin">Iniciar sesión</button>
              <button type="reset" class="botonLogin"> Cancelar</button>
            </p>
          </div>
        </form>
      </main>
      <%- include('./partials/footer.ejs') %>
  </body>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>

</html>