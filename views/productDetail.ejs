<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Detalle de productos' }); %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="detail">
                    <% products.forEach(product=> { %>
                        <div class="boxDetail">
                            <div class="boxLeft">
                                <img src="<%=product.imagen %> ">
                            </div>
                            <div class="boxRight">
                                <h2>
                                    <%=product.nombre %>
                                </h2>
                                <p> Ingredientes: <%=product.ingredientes %>
                                </p>
                                <div>
                                    <h3>$<%=product.precio %>
                                    </h3>
                                </div>
                                <p>
                                    <a href="./productCart.ejs" class="agregarCarrito">Agregar al carrito <i
                                            class="fa-solid fa-cart-shopping"></i></a>
                                    <a href="./productDetailMain/<%=product.id %> " class="agregarCarrito">Detalle </a>
                                </p>
                            </div>
                        </div>
                        </div>
                        </div>
                        <% }) %>
                </section>
            </main>
            <%- include('./partials/footer') %>
    </body>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</html>