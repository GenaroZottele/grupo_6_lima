<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Detalle de producto' }); %>

  <body>
    <%- include('./partials/header') %>
      <main>
        <section class="sectionDetailMain">
          <div class="divDetailMain">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/images/products/<%=product.image%> " class="d-block w-100" alt="...">
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="divInfoDetailMain">
              <h2>
                <%=product.name%>
              </h2>
              <p>
                <%=product.description%>
              </p>
              <div>
                <h3>
                  <%=product.price%>$
                </h3>
              </div>
              <p><a href="/productCart" class="agregarCarrito">Agregar al carrito <i
                    class="fa-solid fa-cart-shopping"></a></i></p>
            </div>
          </div>
        </section>
      </main>
      <%- include('./partials/footer') %>
  </body>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>

</html>