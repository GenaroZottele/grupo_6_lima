<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'Detalle de productos' }); %>

    <body>
        <%- include('./partials/header') %>
            <main>
                <section class="detail">
                    <% for (let i= 0; i < results.length; i++) { %>
                        <a href="/products/<%=results[i].id%>"></a>
                        <h2>
                            <%=results[i].name %>
                        </h2>
                        <div class="boxDetail">
                            <div class="boxLeft">
                                <img src="<%=results.image %> ">
                            </div>
                            <div class="boxRight">
                                
                                <p> Descripci√≥n: <%=results.description %>
                                </p>
                                <div>
                                    <h3>$<%=results.price %>
                                    </h3>
                                </div>
                                <p>
                                    <a href="./productCart.ejs" class="agregarCarrito">Agregar al carrito <i
                                            class="fa-solid fa-cart-shopping"></i></a>
                                    <a href="./productDetailMain/<%=results.id %> " class="agregarCarrito">Detalle </a>
                                </p>
                                <p><a href="./edit/<%=results.id %>" class="agregarCarrito">Modificar producto</a></p>
                            </div>
                        </div>
                        </div>
                        </div>
                        <% } %>
                </section>
            </main>
            <%- include('./partials/footer') %>
    </body>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>

</html>