<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {pageTitle: 'LIMA' }); %>

    <body>

        <%- include('./partials/header', {pageTitle: 'LIMA' }); %>

            <main class="mainregister">

                <div class="perfil">INFORMACIÓN DE USUARIO

                    <form action="/users/edit?_method=PUT" method="POST" class="formPanel"
                        enctype="multipart/form-data">

                        <h2>MODIFICAR DATOS</h2>
                        <h2>
                            <%=user.full_name%>
                        </h2>

                        <p>
                            <label class="formlabel">Nombre y apellido:</label>
                            <input type="text" name="full_name" value="<%=user.full_name%>">
                        <div class="errors">
                            <% if(locals.errors && errors.full_name) { %>
                                <%= errors.full_name.msg %>
                                    <% } %>
                        </div>

                        <p>
                            <label class="formlabel">email:</label>
                            <input type="email" name="email" value="<%=user.email%>">
                        <div class="errors">
                            <% if(locals.errors && errors.email) { %>
                                <%= errors.email.msg %>
                                    <% } %>
                        </div>
                        </p>

                        <p>
                            <label>Contraseña:</label>
                            <input type="password" name="password">
                        <div class="errors">
                            <% if(locals.errors && errors.password) { %>
                                <%= errors.password.msg %>
                                    <% } %>
                        </div>
                        </p>

                        <p>
                            <label class="formlabel">Celular:</label>
                            <input type="text" name="phone" value="<%=user.phone%>">
                        <div class="errors">
                            <% if(locals.errors && errors.full_name) { %>
                                <%= errors.full_name.msg %>
                                    <% } %>
                        </div>
                        <p>

                        <p>
                            <label>adress_id:</label>
                            <select name="adress_id" id="adress_id">
                                <option value="<%=user.adress_id%>">adressId0</option>
                            </select>
                        <div class="errors">
                            <% if(locals.errors && errors.adress_id) { %>
                                <%= errors.adress_id.msg %>
                                    <% } %>
                        </div>
                        </p>

                        <p>
                            <label>user_type_id:</label>
                            <select name="user_type_id" id="user_type_id">
                                <option value="<%=user.user_type_id%>">userType0</option>
                            </select>
                        <div class="errors">
                            <% if(locals.errors && errors.user_type_id) { %>
                                <%= errors.user_type_id.msg %>
                                    <% } %>
                        </div>
                        </p>

                        <p>
                            <label class="formlabel" for="image">Imagen:</label>
                            <input type="file" accept=".jpg, .png, .jpeg" name="image">
                        <div class="errors">
                            <% if(locals.errors && errors.image) { %>
                                <%= errors.image.msg %>
                                    <% } %>
                        </div>
                        </p>

                        <p class="botonesPanel">
                            <button type="reset" class="botonPanel">BORRAR</button>
                            <button type="submit" class="botonPanel">MODIFICAR</button>
                        </p>

                    </form>
                </div>

            </main>

            <%- include('partials/footer') %>

    </body>

</html>